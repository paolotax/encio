= form_for @serata do |f|
  -if @serata.errors.any?
    #error_explanation
      %h2= "#{pluralize(@serata.errors.count, "error")} prohibited this serata from being saved:"
      %ul
        - @serata.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titolo
    = f.text_field :titolo
  .field
    = f.label :data
    = f.date_select :data
  .actions
    = f.submit 'Save'
