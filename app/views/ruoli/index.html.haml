.pull-right
  = link_to new_ruolo_path, class: "btn btn-primary" do
    %i.icon-plus
    Nuovo ruolo

%h2 Ruoli


%table.table
  %thead
    %tr
      %th Ruolo
      %th
  %tbody
    - @ruoli.each do |ruolo|
      %tr
        %td= link_to ruolo.nome, ruolo
        %td
          .pull-right
            = link_to edit_ruolo_path(ruolo), class: "btn btn-success" do
              %i.icon-pencil
            = link_to ruolo, :confirm => 'Sei sicuro?', :method => :delete, class: "btn btn-danger" do
              %i.icon-minus

