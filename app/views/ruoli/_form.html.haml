= form_for @ruolo do |f|
  -if @ruolo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ruolo.errors.count, "error")} prohibited this ruolo from being saved:"
      %ul
        - @ruolo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .actions
    = f.submit 'Save'
